alias ls='ls -G'

# Git aliases
alias gap='git add --patch'
alias gd='git diff'
alias gds='git diff --staged'
alias gdw='git diff --word-diff'
alias gf='git fetch'
alias gl='git lg'
alias gp='git pull --ff-only'
alias gt='cd "$(git rev-parse --show-toplevel)"'
alias st='git st'

# Git aliases -- external apps
alias gdm='git diff | mate'
alias gx='gitx'
