[user]
    name = David Thompson
    email = mail@fatbusinessman.com

[alias]
    added = diff --diff-filter=A --name-only
    amend = commit --amend --no-edit
    b = branch
    ci = commit
    co = checkout
    com = checkout master
    d = diff
    ff = merge --ff-only
    fp = fetch --prune
    glog = log --graph --oneline
    lg = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
    m = merge --no-ff
    one = log --oneline
    pf = pull --ff-only
    pff = pull --ff-only
    st = status -sb

[core]
    excludesfile = ~/.gitignore
    quotepath = false

[color]
    ui = true

[push]
    default = upstream

[merge]
    defaultToUpstream = true

[rebase]
    autosquash = true

[stash]
    showPatch = true

[include]
  path = .gitconfig-local

[commit]
	verbose = true

[interactive]
	singlekey = true
